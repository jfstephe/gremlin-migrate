{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": "src",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "inlineSourceMap": true,
        "removeComments": true,
        "target": "es2015",
        "lib": ["es2015", "dom"],
        "types": [
            "node", "lodash", "jasmine"
        ], 
        "outDir": "dist/",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true, 
        "baseUrl": "./",
        "paths": {
            "*": [ "*"],
            "mock*": [
                "mock*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}